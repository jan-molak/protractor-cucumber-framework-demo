  "bugs": {
    "url": "https://github.com/serenity-js/serenity-js-cucumber-protractor-template/issues"
  },
  "homepage": "http://serenity-js.org",
  "engines": {
    "node": "^14 || ^16 || ^18",
    "npm": "^6 || ^7 || ^8"
  },
  "dependencies": {
    "@cucumber/cucumber": "^8.10.0",
    "@serenity-js/core": "^3.0.0-rc.40",
